<div class="show-drill">
  <div>
    <%= @drill.title %>
  </div>
  <div>
    <%= @drill.genre.name %>
  </div>
  <div>
    <%= @drill.information %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @drill.user_id %>
  <% @quizzes.each_with_index do |quiz, i| %>
    <div class="quiz">
      <div><%= "第#{i + 1}問" %></div>
      <%= quiz.question %>
      <%= quiz.choices_1 %>
      <%= quiz.choices_2 %>
      <%= quiz.choices_3 %>
      <%= quiz.choices_4 %>
      <%= quiz.correct_answer %>
    </div>
  <% end %>
  <%= render 'shared/quiz-form' %>
<% elsif user_signed_in? %>
  <%= link_to 'クイズにチャンレンジ', '#', class: "challenge-btn" %>
<% else %>
  <div>クイズにチャレンジするにはログインする必要があります</div>
<% end %>